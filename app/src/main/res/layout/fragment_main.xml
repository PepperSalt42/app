<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/messages_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/background_fragments_color"
        android:padding="@dimen/keyline_05"
        />

    <View
        android:layout_width="@dimen/separator_width"
        android:layout_height="match_parent"
        android:background="@color/separator_colors"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="5"
        >
        <FrameLayout
            android:id="@+id/announce_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_fragments_color"
            android:padding="@dimen/keyline_05"
            android:layout_weight="2"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_width"
            android:background="@color/separator_colors"
            />

        <FrameLayout
            android:id="@+id/question_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_fragments_color"
            android:padding="@dimen/keyline_05"
            android:layout_weight="1"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_width"
            android:background="@color/separator_colors"
            />

        <FrameLayout
            android:id="@+id/ranking_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_fragments_color"
            android:padding="@dimen/keyline_05"
            android:layout_weight="2"
            />

    </LinearLayout>
</LinearLayout>